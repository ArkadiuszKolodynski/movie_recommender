extends layout
block content
    link(rel="stylesheet", href="/css/spinner.css")
    script(src="/js/get_top_movies.js")
    #row.row.justify-content-center
        .card.mt-5(style="width: 200px")
            img#img.card-img-top(src="" alt="")
            .card-body
                h4#title.card-title
                p#year.card-text
                div
                    span Rate: 
                    select#rate
                        option(value=1) 1
                        option(value=2) 2
                        option(value=3) 3
                        option(value=4) 4
                        option(value=5) 5
                        option(value=6) 6
                        option(value=7) 7
                        option(value=8) 8
                        option(value=9) 9
                        option(value=10) 10
                    span.float-right
                        span#counter 1
                        span /10
            button#confirm.btn.btn-primary Confirm rate
            button#skip.btn.btn-primary Skip
            